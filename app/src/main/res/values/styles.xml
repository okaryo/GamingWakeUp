<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <item name="android:elevation">16dp</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary_light</item>
        <item name="colorControlNormal">@color/on_primary</item>
        <item name="toolbarStyle">@style/MyToolBar</item>
    </style>

    <style name="NumberButton">
        <item name="android:layout_width">96dp</item>
        <item name="android:layout_height">96dp</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:background">@drawable/style_game_number_panel_untapped</item>
        <item name="layout_gravity">fill</item>
        <item name="layout_columnWeight">1</item>
        <item name="layout_rowWeight">1</item>
    </style>
</resources>
